.search
  width 500px
  margin 20px auto
  background-color #ffffff

.search__form
  position relative
  input[type="text"]
    width 100%
    height 50px
    font-size 24px
    font-weight lighter
    border 1px solid #ff7f00
    padding 0 10px
  button
    position absolute
    z-index 1
    cursor pointer
    top 10px 
    right 10px
    background none
    border none
    .fa
      font-size 24px
      color #303030
